{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node", "express"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "src/middleware/authentication.ts",
    "src/controllers/Auth/index.ts"
  ],
  "exclude": ["node_modules"]
}
